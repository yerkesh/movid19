<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".EditUpdateMovieActivity"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/edit_update_movie_image"
            android:layout_width="270dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Title:"
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="82dp"/>
        <EditText
            android:id="@+id/edit_update_movie_title"
            android:textSize="20sp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Item ID:"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="82dp"
            />
        <EditText
            android:id="@+id/edit_update_movie_id"
            android:textSize="20sp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Description:"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:id="@+id/edit_update_movie_description"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"

            />

        <Button
            android:id="@+id/edit_update_movie_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#32F207"
            android:text="save"
            android:textColor="#FEFDFC"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"/>
    </LinearLayout>
</ScrollView>
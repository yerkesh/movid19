<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowMovieUserActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_movie_selected_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/user_movie_selected_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="tilte"
            android:textColor="#040000"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/user_movie_selected_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="here is description about selected movie it's really cool I recoment it to watch I have a lot og emotions from this movie"
            android:textSize="20sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/show_movie_user_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="16dp"
            app:borderWidth="0dp"
            app:useCompatPadding="true"
            android:backgroundTint="#F9F7F7"
            android:src="@drawable/ic_baseline_add_circle_24"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/show_movie_user_basket_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="16dp"
            app:borderWidth="0dp"
            app:useCompatPadding="true"
            android:backgroundTint="#F9F7F7"
            android:src="@drawable/ic_baseline_shopping_cart_24"/>


    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="#660BE8">

    <EditText
        android:id="@+id/signup_edit_name"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="#886F5391"
        android:gravity="center_horizontal"
        android:hint="Name"
        android:textColor="#F5F7F7"
        android:textColorHint="#C9CFCF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/signup_edit_surname"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="#886F5391"
        android:gravity="center_horizontal"
        android:hint="Surname"
        android:textColor="#F5F7F7"
        android:textColorHint="#C9CFCF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/signup_edit_email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="253dp"
        android:background="#886F5391"
        android:gravity="center_horizontal"
        android:hint="E-mail"
        android:textColor="#F5F7F7"
        android:textColorHint="#C9CFCF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/signup_edit_phone"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="343dp"
        android:background="#886F5391"
        android:gravity="center_horizontal"
        android:hint="Phone number"
        android:textColor="#F5F7F7"
        android:textColorHint="#C9CFCF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/signup_btn_signup"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="227dp"
        android:background="#EA1EAD"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="#D5D4D7"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/signup_text_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="575dp"
        android:text="Already have an account? \n             SIGN IN now"
        android:textColor="#D8D7DA"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>